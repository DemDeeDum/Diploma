@using Hotel.WEB.Models.Identity
@model LoginViewModel
@{
    ViewBag.Title = "Sign in";
}
@Styles.Render("~/Content/css/loginpage.css")
    <article id="login-page" class="top-menu text-center p-1 page-header">@ViewBag.Title</article>

    <article class="d-lg-flex justify-content-center form-login">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl },
            FormMethod.Post, new { @class = "form-horizontal form-login", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="text-center">Use the local account for logging in</div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="d-lg-flex justify-content-center">
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-8 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="d-lg-flex justify-content-center">
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-8 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                    <div class="col-md-offset-2 col-md-10 mt-3">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                    <div class="col-md-offset-2 col-md-10 mt-3">
                        <input type="submit" value="Log in" class="btn btn-dark" />
                    </div>
                </div>
            </div>
            <p>
                @Html.ActionLink("Register new user", "Register")
            </p>
            @* Включите, когда будет включено подтверждение учетной записи для функции сброса пароля
            <p>
                @Html.ActionLink("Забыли пароль?", "ForgotPassword")
            </p>*@
        }
    </article>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}